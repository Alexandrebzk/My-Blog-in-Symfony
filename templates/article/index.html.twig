{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
    <div class="card col-md-12">
        <img class="card-img-top" src="{{ article.image }}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{ article.title }} | {{ article.author }}</h5>
            <p class="card-text">{{ article.subtitle }}</p>
            <p class="card-body">{{ article.body }}</p>
            <p class="card-text">Last update : {{ article.createdAt | date("d/m/Y", "Europe/Paris") }}</p>
            <hr>
            {{ form_start(formComment) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(formComment) }}
            </div>

            <div class="row">
                <div class="col">
                    {{ form_row(formComment.name) }}
                    {{ form_row(formComment.email) }}
                </div>
                <div class="col">
                    {{ form_row(formComment.comment) }}
                </div>
            </div>
            {{ form_end(formComment) }}
        </div>
    </div>
    <hr>
    <div class="row">
        <h5>COMMENT SECTION</h5>
        {% for comment in article.comments %}

            <div class="card col-md-12 p-3 mt-2">
                {% set difference = date(comment.createdAt|date('Y/m/d')).diff(date('now'|date('Y/m/d'))) %}
                {% set leftDays = difference.days %}
                {% if leftDays == 0 %}
                    <small>Today</small>
                {% else %}
                    <small>{{ leftDays }} days ago.</small>
                {% endif %}
                <div class="d-flex justify-content-between align-items-center">
                    <div class="user d-flex flex-row align-items-center">
                        <img src="https://i.imgur.com/C4egmYM.jpg"
                             width="30"
                             class="user-img rounded-circle mr-2" alt="img">
                        <span><small class="font-weight-bold text-primary">{{ comment.name }}</small> <small
                                    class="font-weight-bold">{{ comment.comment }} </small></span></div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
