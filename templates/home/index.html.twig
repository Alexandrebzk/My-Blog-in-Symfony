{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}
{% block body %}
    <div class="row">
        {% for index,article in articles %}
            <div class="card col-md-4 mb-3">
                <img class="card-img-top" src="{{ article.image }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ article.title }} | {{ article.author }}</h5>
                    <p class="card-text">{{ article.subtitle }}</p>
                    <p class="card-body">{{ article.body }}</p>
                    <p class="card-text">Last update : {{ article.createdAt | date("d/m/Y", "Europe/Paris") }}</p>
                    <hr>
                    <a href="#" class="btn btn-primary d-block">Learn more</a>
                </div>
            </div>
            {% if(index+1)%3 == 0 %}
                <hr>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
